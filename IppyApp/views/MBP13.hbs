            const deviceMBP13 = new Device (
                document.querySelector('input[name="MBP_1"]:checked ').id,
                document.querySelector('input[name="MBP_1"]:checked').value,
                color
            );
            arr.push(deviceMBP13);
                    
            localStorage.setItem("my_models", JSON.stringify(arr));
            alert("Товар добавлен в корзину");
        }

        function changeColor(x) {
            if(x == "Space Gray") 
            {
                color = "Space Gray"
                document.getElementById('MBP13_photo').src = "./images/Mac/MBP13/MBP13SG.jpg";
                return color;
            }
            else if(x == "Silver") 
            {
                color = "Silver"
                document.getElementById('MBP13_photo').src = "./images/Mac/MBP13/MBP13SL.jpg";
