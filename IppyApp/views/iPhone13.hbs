                                <label for="Midnight">
                                    <img src="./images/colors/finish-midnight-202209.jpeg">
                                    <span>Midnight</span>
                                </label>
                            </li>
                            <br>
                            <li>
                                <input type="radio" name="13" id="Blue" value="Blue" onclick="changeColor('Blue')">
