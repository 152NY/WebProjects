                                <input id = "iPhone 14 128 GB" type="radio" name="14_1"  checked>
                                <label id = "14 128 GB" for="iPhone 14 128 GB"> 128 GB  </label>
                            </div>
                                    
                            <div class="form_radio_btn">
                                <input id = "iPhone 14 256 GB" type="radio" name="14_1">
                                <label id = "14 256 GB"; for="iPhone 14 256 GB">256 GB  </label>
                            </div>
                                    
                            <div class="form_radio_btn">
                                <input id = "iPhone 14 512 GB" type="radio" name="14_1" >
