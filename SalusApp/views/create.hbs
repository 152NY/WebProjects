<h2>Create building</h2>

<div class = "create_form">

<form method="POST" action="/create" enctype="multipart/form-data">
    <label>Upload 7 photos</label> <br>
    <input type="file" name="filedata" multiple required> <br>


    <br>
    <label for = "id">ID</label>
    <input type="text" id="id" name="id" required>

    <br>
    <label for = "country">Country</label>
    <input type="text" id="country" name="country" required>



    <br>
    <label for = "selector">Building options</label>
    <select type="text" id="selector" name="selector" required>
        <option>Rent</option>
        <option>Sell</option>
        <option>Lands/Projects</option>
    </select>

    <br><br>
    <label for = "address">Address</label>
    <input type="text" id="address" name="address" required>

    
    <br>
    <label for = "price">Price</label>
    <input type="text" id="price" name="price" required>

    <br>
    <label for = "descriptionEN">Description (English)</label>
    <input type="text" id="descriptionEN" name="descriptionEN" required>

    <br>
    <label for = "descriptionDE">Description (German)</label>
    <input type="text" id="descriptionDE" name="descriptionDE" required>

    <br>
    <label for = "descriptionRU">Description (Russian)</label>
    <input type="text" id="descriptionRU" name="descriptionRU" required>

    <button type="submit" class="btn">Send</button>
</div>
</form>
</div>