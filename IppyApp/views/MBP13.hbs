<body>
    <script>
        
        var color = "Space Gray";
        window.onload = function () {
            e_MBP13();
        }

        function e_MBP13(){

            const memories = ['256 GB', '512 GB'];
            const prices = [95990, 108990];

            let inputId = " ";
            let labelId = " ";
            
            for (let j = 0; j < memories.length; j++)
            {
                inputId = 'MacBook Pro 13 (M2) ' + memories[j];
                document.getElementById(inputId).value = prices[j];
            }
            for (let j = 0; j < memories.length; j++)
            {
                labelId = ('MBP13 ' + memories[j]);
                document.getElementById(labelId).innerHTML += (prices[j] + "₽");
            }
        }

