<body>
    <script>
        
        var color = "Starlight";
        window.onload = function () {
            e_13STD();
        }

        function e_13STD(){

            const memories = ['128 GB', '256 GB', '512 GB'];
            const prices = [65990, 88990, 91990];

            let inputId = " ";
            let labelId = " ";
            
            for (let j = 0; j < memories.length; j++)
            {
                inputId = 'iPhone 13 ' + memories[j];
                document.getElementById(inputId).value = prices[j];
            }
            for (let j = 0; j < memories.length; j++)
            {
                labelId = ('13 ' + memories[j]);
                document.getElementById(labelId).innerHTML += (prices[j] + "₽");
            }
        }

        function addFunc13() {
            const device13 = new Device (
                document.querySelector('input[name="13_1"]:checked ').id,
                document.querySelector('input[name="13_1"]:checked').value,
                color
            );
            arr.push(device13);
                    
            localStorage.setItem("my_models", JSON.stringify(arr));
            alert("Товар добавлен в корзину");
        }

        function changeColor(x) {
            if (x == "Blue") 
            {
                color = "Blue"
                document.getElementById('13_photo').src = "./images/iPhones/13/13BL.jpg";
                return color;
            } 
            else if(x == "Midnight") 
            {
                color = "Midnight"
                document.getElementById('13_photo').src = "./images/iPhones/13/13BK.jpg";
                return color;
            }
            else if(x == "Pink") 
            {
                color = "Pink"
                document.getElementById('13_photo').src = "./images/iPhones/13/13PK.jpg";
                return color;
            }
            else if(x == "Starlight") 
            {
                color = "Starlight"
                document.getElementById('13_photo').src = "./images/iPhones/13/13WH.jpg";
                return color;
            }
            else if(x == "(product)RED") 
            {
                color = "(product)RED"
                document.getElementById('13_photo').src = "./images/iPhones/13/13PR.jpg";
                return color;
            }
            else 
            {
                color = "Starlight"
                document.getElementById('13_photo').src = "./images/iPhones/13/13WH.jpg";
                return color;
            }
        }
    </script>

