<body>
    <script>
        
        var color = "Midnight";
        window.onload = function () {
            e_MBAM2();
        }

        function e_MBAM2(){

            const memories = ['256 GB', '512 GB'];
            const prices = [85990, 98990];

            let inputId = " ";
            let labelId = " ";
            
            for (let j = 0; j < memories.length; j++)
            {
                inputId = 'MacBook Air M2 ' + memories[j];
                document.getElementById(inputId).value = prices[j];
            }
            for (let j = 0; j < memories.length; j++)
            {
                labelId = ('MBAM2 ' + memories[j]);
                document.getElementById(labelId).innerHTML += (prices[j] + "₽");
            }
        }

        function addFuncMBAM2() {
            const deviceMBAM2 = new Device (
                document.querySelector('input[name="MBA_2"]:checked ').id,
                document.querySelector('input[name="MBA_2"]:checked').value,
                color
            );
            arr.push(deviceMBAM2);
                    
            localStorage.setItem("my_models", JSON.stringify(arr));
            alert("Товар добавлен в корзину");
        }

        function changeColor(x) {
            if(x == "Midnight") 
            {
                color = "Midnight"
                document.getElementById('MBAM2_photo').src = "./images/Mac/MBAM2/MBAM2MD.jpg";
                return color;
            }
            else if(x == "Space Gray") 
            {
                color = "Space Gray"
                document.getElementById('MBAM2_photo').src = "./images/Mac/MBAM2/MBAM2SG.jpg";
                return color;
            }
            else if(x == "Starlight") 
            {
                color = "Starlight"
                document.getElementById('MBAM2_photo').src = "./images/Mac/MBAM2/MBAM2GL.jpg";
                return color;
            }
            else if(x == "Silver") 
            {
                color = "Silver"
                document.getElementById('MBAM2_photo').src = "./images/Mac/MBAM2/MBAM2SL.jpg";
                return color;
            }
            else 
            {
                color = "Midnight"
                document.getElementById('MBAM2_photo').src = "./images/Mac/MBAM2/MBAM2MD.jpg";
                return color;
            }
        }
    </script>

