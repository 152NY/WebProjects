<body>
    <script>
        
        var color = "Starlight";
        window.onload = function () {
            e_14STD();
        }

        function e_14STD(){

            const memories = ['128 GB', '256 GB', '512 GB'];
            const prices = [85990, 98990, 111990];

            let inputId = " ";
            let labelId = " ";
            
            for (let j = 0; j < memories.length; j++)
            {
                inputId = 'iPhone 14 ' + memories[j];
                document.getElementById(inputId).value = prices[j];
            }
            for (let j = 0; j < memories.length; j++)
            {
                labelId = ('14 ' + memories[j]);
                document.getElementById(labelId).innerHTML += (prices[j] + "₽");
            }
        }

        function addFunc14() {
            const device14 = new Device (
                document.querySelector('input[name="14_1"]:checked ').id,
                document.querySelector('input[name="14_1"]:checked').value,
                color
            );
            arr.push(device14);
                    
            localStorage.setItem("my_models", JSON.stringify(arr));
            alert("Товар добавлен в корзину");
        }

        function changeColor(x) {
            if (x == "Blue") 
            {
                color = "Blue"
                document.getElementById('14_photo').src = "./images/iPhones/14/14LB.jpg";
                return color;
            } 
            else if(x == "Midnight") 
            {
                color = "Midnight"
                document.getElementById('14_photo').src = "./images/iPhones/14/14BL.jpg";
                return color;
            }
            else if(x == "Purple") 
            {
                color = "Purple"
                document.getElementById('14_photo').src = "./images/iPhones/14/14VL.jpg";
                return color;
            }
            else if(x == "Starlight") 
            {
                color = "Starlight"
                document.getElementById('14_photo').src = "./images/iPhones/14/14WH.jpg";
                return color;
            }
            else if(x == "(product)RED") 
            {
                color = "(product)RED"
                document.getElementById('14_photo').src = "./images/iPhones/14/14PR.jpg";
                return color;
            }
            else 
            {
                color = "Starlight"
                document.getElementById('14_photo').src = "./images/iPhones/14/14WH.jpg";
                return color;
            }
        }
    </script>

    <div class="container">
        <div class = "foreground">    
            <h1 id="catalog"> iPhone 14 </h1>

            <div class="item_wide" >
                <div class="row">
                    <div class="column">
                        <img id="14_photo" src="./images/iPhones/14/14WH.jpg" >
                    </div>
                    <div class="column">
                        <div class="title">
                            <h2>Цвет</h2>
                        </div>
                        <ul name="color" class="colorPicker">
                            <li>
                                <input type="radio" name="14" id="Starlight" value="Starlight" onclick="changeColor('Starlight')" checked>
                                <label for="Starlight">
                                    <img src="./images/colors/finish-starlight-202209.jpeg">
                                    <span>Starlight</span>
                                </label>
                            </li>
                            <br>
                            <li>
                                <input type="radio" name="14" id="Midnight" value="Midnight" onclick="changeColor('Midnight')">
                                <label for="Midnight">
                                    <img src="./images/colors/finish-midnight-202209.jpeg">
                                    <span>Midnight</span>
                                </label>
                            </li>
                            <br>
                            <li>
                                <input type="radio" name="14" id="Blue" value="Blue" onclick="changeColor('Blue')">
                                <label for="Blue">
                                    <img src="./images/colors/finish-blue-202209.jpeg">
                                    <span>Blue</span>
                                </label>
                            </li>
                            <br>
                            <li>
                                <input type="radio" name="14" id="Purple" value="Purple" onclick="changeColor('Purple')">
                                <label for="Purple">
                                    <img src="./images/colors/finish-purple-202209.jpeg">
                                    <span>Purple</span>
                                </label>
                            </li>
                            <br>
                            <li>
                                <input type="radio" name="14" id="(product)RED" value="(product)RED" onclick="changeColor('(product)RED')">
                                <label for="(product)RED">
                                    <img src="./images/colors/finish-red-202209.jpeg">
                                    <span>(product)RED</span>
                                </label>
                                    
                            </li>
                            <br>
                        </ul>
                        

                        <form action=" " class="memory">
                            <div class="title">
                                <h2>Память</h2>
                            </div>
